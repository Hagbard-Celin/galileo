.KEY Only
.DEF Only "All"
; Script for building release version of Galileo File Manager.
;
; To speed up buld time, copy the directory "Build" to another drive,
; and change the path of the variable "$builddir" to point to this new location.
;

set builddir GalileoD:Build

stack 8192
assign GalileoD: ""

assign GalileoS: EXISTS >NIL:
if WARN
assign GalileoS: Source
set sassign made
endif

assign GalileoB: EXISTS >NIL:
if WARN
assign GalileoB: $builddir
set bassign made
endif

cd GalileoS:GST
smake all
cd GalileoD:

if <Only> EQ "SDK"
cd GalileoS:Library
smake SDK
cd GalileoS:Modules
smake SDK
skip Cleanup
endif

cd GalileoS:Modules
smake pragmas

cd GalileoS:Library
smake all
cd GalileoS:Program
smake all
cd GalileoS:Modules
smake all
cd GalileoS:Misc/c
smake all
cd GalileoS:Misc/ifftogalileo
smake all
cd GalileoS:Misc/viewfont
smake all

lab Cleanup
cd GalileoD:
assign GalileoD:

if $sassign EQ made
assign GalileoS:
unset sassign
endif

if $bassign EQ made
assign GalileoB:
unset bassign
endif

unset builddir

